<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    tools:context=".ui.assignment.add.AssignmentAddActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_judul_tugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Tugas"
        style="@style/Title"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/edit_judul_tugas"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:inputType="text"
        tools:text="Tugas B.Indonesia LKS Hal 100"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_username" />

    <TextView
        android:id="@+id/tv_tugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugas"
        style="@style/Title"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/edit_tugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="12dp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border"
        tools:text="@string/contoh_soal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_username" />

    <TextView
        android:id="@+id/tv_tenggat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenggat"
        style="@style/Title"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/edit_tenggat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:inputType="none"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        tools:text="18/07/2001 23:59"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_username" />

    <Button
        android:id="@+id/btn_add_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_primary_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password" />
</LinearLayout>